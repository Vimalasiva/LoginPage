@model  LoginPage.Models.Sample

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User</title>
</head>
<body>
    <div>
        <h1>Welcome</h1>
        @using (Html.BeginForm("Correct", "Home"))
        {
            @Html.LabelFor(n => n.Name)
            @Html.TextBoxFor(n => n.Name)
            <br />
            @Html.LabelFor(n => n.Password)
            @Html.PasswordFor(n => n.Password)
            <br/>
            <button>Submit</button>

        }
    </div>
</body>
</html>
